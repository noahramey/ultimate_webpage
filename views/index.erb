<div class="row">
  <div class="col-sm-4">
    <form action="/triangle">
      <h1 class="text-center">Triangle</h1>
      <h4 class="text-justified">Enter your 3 side lengths to find out what kind of triangle YOU are!</h4>
      <div class="form-group">
        <label for="side1">Side 1</label>
        <input type="text" name="side1" class="form-control" placeholder="<%= @side1 %>">
        <label for="side2">Side 2</label>
        <input type="text" name="side2" class="form-control" placeholder="<%= @side2 %>">
        <label for="side3">Side 3</label>
        <input type="text" name="side3" class="form-control" placeholder="<%= @side3 %>">
      </div>

      <button type="submit" id="triangle_button" class="btn btn-lg btn-success">Find your Triangle</button>
    </form>

    <div>
      <% if @test == "triangle" %>
      <h1>Results</h1>
      <h2>You are an <%= @triangle_results %>!</h2>
      <% end %>
    </div>

  </div>
  <div class="col-sm-4">
    <form action="/parcel">
      <h1 class="text-center">Parcel Delivery</h1>
      <h4 class="text-justified">Enter your parcel dimensions and weight to calculate shipping costs.</h4>
      <div class="form-group">
        <label for="length">Length</label>
        <input type="text" name="length" class="form-control" placeholder="<%= @length %>">
        <label for="width">Width</label>
        <input type="text" name="width" class="form-control" placeholder="<%= @width %>">
        <label for="height">Height</label>
        <input type="text" name="height" class="form-control" placeholder="<%= @height %>">
        <label for="weight">Weight</label>
        <input type="text" name="weight"  class="form-control" placeholder="<%= @weight %>">
      </div>

      <button type="submit" id="parcel_button" class="btn btn-lg btn-warning">Calculate Shipping</button>
    </form>

    <div>
      <% if @test == "parcel" %>
      <h1>Results</h1>
      <h2>Shipping: <%= @parcel_results %></h2>
      <% end %>
    </div>

  </div>
  <div class="col-sm-4">
    <h1 class="text-center">Hashes</h1>
    <h4 class="text-justified">Enter hash names and key-value pairs, then merge them to see your final hash.</h4>
    <form action="/hash">
      <div class="form-group">
        <h3>First Hash</h3>
        <label for="key1">Key</label>
        <input type="text" name="key1" class="form-control" placeholder="<%= @key1 %>">
        <label for="value1">Value</label>
        <input type="text" name="value1" class="form-control" placeholder="<%= @value1 %>">
        <label for="key2">Key</label>
        <input type="text" name="key2" class="form-control" placeholder="<%= @key2 %>">
        <label for="value2">Value</label>
        <input type="text" name="value2" class="form-control" placeholder="<%= @value2 %>">
      </div>
      <div class="form-group">
        <h3>Second Hash</h3>
        <label for="key3">Key</label>
        <input type="text" name="key3" class="form-control" placeholder="<%= @key3 %>">
        <label for="value3">Value</label>
        <input type="text" name="value3" class="form-control" placeholder="<%= @value3 %>">
        <label for="key4">Key</label>
        <input type="text" name="key4" class="form-control" placeholder="<%= @key4 %>">
        <label for="value4">Value</label>
        <input type="text" name="value4" class="form-control" placeholder="<%= @value4 %>">
      </div>

      <button type="submit" id="hash_button" class="btn btn-lg btn-danger">Merge Hashes</button>
    </form>

    <% if @test == "hash" %>
      <h1>Results</h1>
      <h2><%= @merged_hash[0][0] %> => <%= @merged_hash[1][0] %></h2>
      <h2><%= @merged_hash[0][1] %> => <%= @merged_hash[1][1] %></h2>
      <% if @merged_hash[0].length == 3 %>
        <h2><%= @merged_hash[0][2] %> => <%= @merged_hash[1][2] %></h2>
      <% elsif @merged_hash[0].length == 4 %>
        <h2><%= @merged_hash[0][3] %> => <%= @merged_hash[1][3] %></h2>
      <% end %>
    <% end %>

  </div>
</div>
